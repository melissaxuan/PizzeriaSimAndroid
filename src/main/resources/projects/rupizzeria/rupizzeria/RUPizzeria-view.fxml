<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="544.0" prefWidth="628.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projects.rupizzeria.rupizzeria.controllers.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label text="RUPizzeria" textFill="#cd2e2e">
      <font>
         <Font name="Georgia Bold Italic" size="61.0" />
      </font>
   </Label>

  <Label fx:id="welcomeText" />
   <HBox fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="608.0" spacing="20.0">
      <children>
         <Button fx:id="B_OrderPlaced1" contentDisplay="TOP" onAction="#onOrdersPlaced" text="Orders Placed">
            <graphic>
               <ImageView fx:id="IV_OrderPlaced1" fitHeight="130.0" fitWidth="195.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/Bill2.JPG" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <Button fx:id="B_Order" contentDisplay="TOP" layoutX="221.0" layoutY="10.0" onAction="#Order" text="Order">
            <graphic>
               <ImageView fx:id="IV_Order" fitHeight="130.0" fitWidth="195.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/spongeorderpic.JPG" />
                  </image>
                  <viewport>
                     <Rectangle2D />
                  </viewport>
               </ImageView>
            </graphic>
         </Button>
        <Button fx:id="B_CurrentOrder" contentDisplay="TOP" onAction="#onCurrentOrder" text="Current Order">
            <graphic>
               <ImageView fx:id="IV_CurrentOrder" fitHeight="130.0" fitWidth="158.0" pickOnBounds="true">
                  <image>
                     <Image url="@Images/cartSponge2.JPG" />
                  </image>
                  <viewport>
                     <Rectangle2D />
                  </viewport>
               </ImageView>
            </graphic>
         </Button>
      </children>
   </HBox>
</VBox>
